{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build && cd .. && node copy-build-to-root.js",
  "outputDirectory": ".",
  "installCommand": "npm install && cd client && npm install",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
